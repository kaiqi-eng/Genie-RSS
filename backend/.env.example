# Required: API key for authenticating requests (set your own secure key)
API_KEY=your_secure_api_key_here

# Required: OpenAI API key for feed summarization and transcript analysis
OPENAI_API_KEY=your_openai_api_key_here

# Required: ScrapingBee API key for bypassing blocked websites
SCRAPINGBEE_API_KEY=your_scrapingbee_api_key_here

# Optional: Webhook URL for intelligence delivery
WEBHOOK_URL=https://your-webhook-endpoint.com/webhook

# Optional: Gmail credentials for newsletter extraction via IMAP
NEWSLETTER_EMAIL=your_email@gmail.com
NEWSLETTER_PASSWORD=your_app_password_here

# Optional: Server port (defaults to 3001)
PORT=3001

# Optional: RSS feed cache TTL in seconds (defaults to 3600 = 1 hour)
RSS_CACHE_TTL=3600

# Optional: Cache cleanup check period in seconds (defaults to 600 = 10 minutes)
RSS_CACHE_CHECK_PERIOD=600

# Optional: Set to 'development' for detailed error messages
NODE_ENV=production

# Optional: Log level (debug, info, warn, error, silent). Default: info in production, debug in development
LOG_LEVEL=info

# Optional: Rate limiting settings
# Maximum failed auth attempts before blocking (default: 5)
RATE_LIMIT_MAX_ATTEMPTS=5
# Window in milliseconds for rate limiting (default: 900000 = 15 minutes)
RATE_LIMIT_WINDOW_MS=900000

# Optional: HTTP timeout settings (in milliseconds)
# RSS feed fetching timeout (default: 10000 = 10 seconds)
RSS_FETCH_TIMEOUT=10000
# RSS discovery timeout (default: 10000 = 10 seconds)
RSS_DISCOVERY_TIMEOUT=10000
# Fast RSS discovery timeout (default: 5000 = 5 seconds)
RSS_DISCOVERY_FAST_TIMEOUT=5000
# Web scraper timeout (default: 15000 = 15 seconds)
SCRAPER_TIMEOUT=15000
# Feed processing timeout (default: 15000 = 15 seconds)
FEED_PROCESS_TIMEOUT=15000
# Long feed processing timeout (default: 30000 = 30 seconds)
FEED_PROCESS_LONG_TIMEOUT=30000
# ScrapingBee API timeout (default: 30000 = 30 seconds)
SCRAPINGBEE_TIMEOUT=30000
# LLM API timeout for OpenAI calls (default: 60000 = 60 seconds)
LLM_TIMEOUT=60000

# Optional: Request body size limits
# Default JSON body limit (default: 1mb)
BODY_LIMIT_JSON=1mb
# Transcript body limit (default: 10mb)
BODY_LIMIT_TRANSCRIPT=10mb

# Optional: Content limits
# Maximum items to scrape from a page (default: 20)
MAX_SCRAPED_ITEMS=20
# Maximum content length for scraped items (default: 500)
MAX_CONTENT_LENGTH=500
# Maximum feeds to process in one request (default: 50)
MAX_FEEDS_PER_REQUEST=50

# Optional: OpenAI/LLM settings
# Model to use (default: gpt-3.5-turbo-0125)
OPENAI_MODEL=gpt-3.5-turbo-0125
# Temperature for completions (default: 0)
OPENAI_TEMPERATURE=0
