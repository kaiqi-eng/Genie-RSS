# Required: API key for authenticating requests (set your own secure key)
API_KEY=your_secure_api_key_here

# Required: OpenAI API key for feed summarization and transcript analysis
OPENAI_API_KEY=your_openai_api_key_here

# Required: ScrapingBee API key for bypassing blocked websites
SCRAPINGBEE_API_KEY=your_scrapingbee_api_key_here

# Optional: Webhook URL for intelligence delivery
WEBHOOK_URL=https://your-webhook-endpoint.com/webhook

# Optional: Gmail credentials for newsletter extraction via IMAP
NEWSLETTER_EMAIL=your_email@gmail.com
NEWSLETTER_PASSWORD=your_app_password_here

# Optional: Server port (defaults to 3001)
PORT=3001

# Optional: RSS feed cache TTL in seconds (defaults to 3600 = 1 hour)
RSS_CACHE_TTL=3600

# Optional: Cache cleanup check period in seconds (defaults to 600 = 10 minutes)
RSS_CACHE_CHECK_PERIOD=600

# Optional: Set to 'development' for detailed error messages
NODE_ENV=production

# Optional: Log level (debug, info, warn, error, silent). Default: info in production, debug in development
LOG_LEVEL=info

# Optional: Rate limiting settings
# Maximum failed auth attempts before blocking (default: 5)
RATE_LIMIT_MAX_ATTEMPTS=5
# Window in milliseconds for rate limiting (default: 900000 = 15 minutes)
RATE_LIMIT_WINDOW_MS=900000
